<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
</head>

<body>
	<h3>Books</h3>

	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
			</rt>
		</thead>

		<tbody>
	   		<% @books.each do |book| %>
				<tr>
					<td>
						<%= book.title %>
					</td>
					<td>
						<%= book.body %>
					</td>
					<td>
						<%= link_to 'Show', book_path(book) %>
						<%= link_to 'Edit', edit_book_path(book) %>
						<%= link_to 'Destory', book_path(book), method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>


	<!-- 以下入力フォーム部分 -->
	<% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


	<h3>New Book</h3>
	<%= form_for(@book) do |f| %>
	

	<!-- タイトル入力画面 -->
	<h4>Title</h4>
	<%= f.text_field :title %>

	<!-- 本文入力画面 -->
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>

	<% end %>

</body>